                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:padding="20dp"
                    android:text="테스트 테스트 \n테스트 테스트 "
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:padding="20dp"
                    android:text="테스트 테스트 \n테스트 테스트 "
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:padding="20dp"
                    android:text="테스트 테스트 \n테스트 테스트 "
                    android:textSize="20dp" />

